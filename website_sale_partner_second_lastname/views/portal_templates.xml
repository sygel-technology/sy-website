<odoo>
    <template
        id="website_sale_partner_second_lastname_portal_my_details"
        inherit_id="portal.portal_my_details"
    >
        <xpath expr="//label[@for='lastname']/.." position="after">
            <div t-attf-class="form-group #{error.get('lastname2') and 'o_has_error' or ''} col-xl-6">
                <label class="col-form-label" for="lastname2">Second Lastname</label>
                <input type="text" name="lastname2" t-attf-class="form-control #{error.get('lastname2') and 'is-invalid' or ''}" t-att-disabled="None if partner_can_edit_vat else '1'" t-att-value="lastname2 or partner.lastname2" />
            </div>
        </xpath>
    </template>
</odoo>
