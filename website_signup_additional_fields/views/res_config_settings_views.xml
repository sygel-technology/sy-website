<odoo>
    <record id="website_signup_addition_fields_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">website.signup.addition.fields.res.config.settings.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='auth_signup_uninvited_setting']" position="after">
                <div class="col-12 col-lg-6 o_setting_box" id="singup_additional_fields" groups="base.group_system">
                    <div class="o_setting_left_pane">
                        <field name="website_signup_use_additional_fields"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="website_signup_use_additional_fields"/>
                        <div class="text-muted">
                            Use additional partner fields when creating new user from website
                        </div>
                        <div class="row mt16" attrs="{'invisible': [('website_signup_use_additional_fields', '=', False)]}">
                            <label for="website_signup_additional_fields" string="Additional Fields" class="col-lg-4 o_light_label"/>
                            <field name="website_signup_additional_fields" widget="many2many_tags" options="{'no_create': True}" class="oe_inline"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
