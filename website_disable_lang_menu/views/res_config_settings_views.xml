<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.website.disable.lang</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="20"/>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='languages_setting']/div" position="inside">
                <label for="excluded_language_ids"/>
                <span groups="website.group_multi_website"/>
                <div class="text-muted">
                    Languages excluded from the website languages menu
                </div>
                <div class="content-group">
                    <div class="mt16">
                        <field name="excluded_language_ids" widget="many2many_tags" options="{'no_create': True, 'no_open': True}"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
